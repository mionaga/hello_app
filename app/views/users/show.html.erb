<p style="color: green"><%= notice %></p>

<%= render @user %>

<div>
  <h1>最初の投稿</h1>
  <div>
   <% if @first_micropost %>
      <p>
        Content: <%= @first_micropost.content %>
      </p>
    <% else %>
        <p>No posts yet.</p>
    <% end %>
  </div>
</div>

<div>
  <%= link_to "Edit this user", edit_user_path(@user) %> |
  <%= link_to "Back to users", users_path %>

  <%= button_to "Destroy this user", @user, method: :delete %>
</div>
